<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCarrinhoDeCompras.Views.NovoProduto"
             Title="Adicionar novo produto">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="btn_salvar"
            Text="Salvar" Clicked="btn_salvar_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout 
                        Margin="10"
                        Spacing="10">
        <Label 
            Text="Descrição do produto (Nome):"/>
        <Entry
            x:Name="txt_descricao"/>

        <Label
            Text="Quantidade:"/>
        <Entry
            x:Name="txt_quantidade"
            Keyboard="Numeric"/>

        <Label
            Text="Preço:"/>
        <Entry
            x:Name="txt_preco"/>
    </VerticalStackLayout>
</ContentPage>