<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCarrinhoDeCompras.Views.ListaProduto"
             Title="ListaProduto"
             NavigationPage.HasNavigationBar="True">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Somar_Clicked"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Adicionar_Clicked_1"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        
        <SearchBar 
            x:Name="txt_search" 
            Placeholder="Busca de produto"
            TextChanged="txt_search_TextChanged"/>

        <ListView x:Name="lst_produtos">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *">
                    
                    <Label
                        Text="ID"
                        Grid.Column="0"
                        FontAttributes="Bold"/>
                    <Label
                        Text="Descrição"
                        Grid.Column="1"
                        FontAttributes="Bold"/>
                    <Label
                        Text="Preço unidade"
                        Grid.Column="2"
                        FontAttributes="Bold"/>
                    <Label
                        Text="Qtd"
                        Grid.Column="3"
                        FontAttributes="Bold"/>
                    <Label
                        Text="Total"
                        Grid.Column="4"
                        FontAttributes="Bold"/>

                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="MenuItem_Remover_Clicked"/>
                        </ViewCell.ContextActions>

                        <Grid ColumnDefinitions="*, *, *, *, *">
                            <Label 
                                Text="{Binding Id}"
                                Grid.Column="0"/>
                            <Label 
                                Text="{Binding Descricao}"
                                Grid.Column="1"/>
                            <Label 
                                Text="{Binding Preco}"
                                Grid.Column="2"/>
                            <Label 
                                Text="{Binding Quantidade}"
                                Grid.Column="3"/>
                            <Label 
                                Text="{Binding Total}"
                                Grid.Column="4"/>
                        </Grid>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </VerticalStackLayout>
</ContentPage>