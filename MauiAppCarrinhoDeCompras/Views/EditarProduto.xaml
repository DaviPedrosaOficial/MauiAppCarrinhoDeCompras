<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCarrinhoDeCompras.Views.EditarProduto"
             Title="{Binding Descricao}"
             NavigationPage.HasNavigationBar="True">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#FF5733" Offset="0.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ContentPage.ToolbarItems>
            <ToolbarItem x:Name="btn_salvar" Text="Salvar" Clicked="btn_salvar_Clicked"/>
     </ContentPage.ToolbarItems>

    <VerticalStackLayout 
                    Margin="10"
                    Spacing="10">
        
                <Label 
                    Text="Descrição do produto (Nome):"/>
                <Entry
                    x:Name="txt_descricao" Text="{Binding Descricao}"/>

                <Label
                    Text="Quantidade:"/>
                <Entry
                    x:Name="txt_quantidade"
                    Text="{Binding Quantidade, StringFormat=Empty'{}{0:c}'}"
                    Keyboard="Numeric"/>

                <Label
                    Text="Preço:"/>
                <Entry
                    x:Name="txt_preco"
                    Text="{Binding Preco, StringFormat=Empty'{}{0:c}'}"
                    Keyboard="Numeric"/>
    
    </VerticalStackLayout>
</ContentPage>